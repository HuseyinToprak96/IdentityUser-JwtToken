
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

    @for (int i = 0; i < 5; i++)
    {
        <div class="align-content-md-stretch cnt">
            <h2>@ViewBag.Titles[i]</h2>
            <div>@ViewBag.Paragraphs[i]</div>
        </div>
    }
<style>
    .cnt{
        background-color:beige;
        box-shadow:1px 2px 8px 2px;
        margin-top:50px;
    }
    h2{
        color:brown;
    }
</style>